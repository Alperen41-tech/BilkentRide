<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text_Ubuntu_Condensed_White" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Define your default font family -->
        <item name="android:fontFamily">@font/ubuntu_condensed</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Regular_Page_Heading_Text">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">6</item>
    </style>

    <style name="Regular_Backwards_Arrow">
        <item name="android:src">@drawable/vector_back</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Regular_LinearLayout_ForTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/red</item>



    </style>

    <style name="Regular_Button_View">
        <item name="fontFamily">@font/ubuntu_condensed</item>
        <item name="backgroundTint">@color/red_60</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Regular_Button_View_yellow">
        <item name="fontFamily">@font/ubuntu_condensed</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="Rounded_Button_View_red">
        <item name="fontFamily">@font/ubuntu_condensed</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">1dp</item>
    </style>





</resources>