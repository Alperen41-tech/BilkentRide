<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for the spinner (rounded corners, specify your desired color) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66797C7B" /> <!-- Set your desired background color -->
            <corners android:radius="30dp" /> <!-- Set your desired corner radius -->
        </shape>
    </item>

    <!-- Spinner arrow (positioned to the right) -->
    <item
        android:width="24dp"
        android:height="24dp"
        android:gravity="end|center_vertical|right"
        android:right="10dp">
        <bitmap android:src="@drawable/down_arrow" /> <!-- Replace with your arrow drawable -->
    </item>
</layer-list>